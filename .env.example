# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===================================
# Copier ce fichier en .env et remplir avec vos vraies valeurs

# Database Configuration
DB_NAME=cra-db
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@postgres:5432/cra-db

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARACTERS_LONG
JWT_EXPIRES_IN=24h

# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_MAX_SIZE=10485760
PHOTO_COMPRESSION_QUALITY=0.8
ENABLE_GPS_CAPTURE=true

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend Configuration
VITE_API_URL=https://yourdomain.com
VITE_API_BASE_URL=https://yourdomain.com/api

# Monitoring (Optional)
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
